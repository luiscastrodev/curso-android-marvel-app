<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_flpper_characters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".characters.CharactersFragment">

    <include
        android:id="@+id/include_view_characters_loading_state"
        layout="@layout/view_shimmer_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_characters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:text="Characters"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_character" />

    <include
        android:id="@+id/include_view_character_error"
        layout="@layout/include_view_character_error" />

</ViewFlipper>